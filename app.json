{
  "expo": {
    "name": "MindCare",
    "slug": "mindcare",
    "version": "1.0.0",
    "scheme": "mindcare",
    "orientation": "portrait",
    "icon": "./assets/images/LogoMindCare.png",
    "userInterfaceStyle": "automatic",
    "description": "MindCare - Aplicativo de cuidados com a saúde mental e bem-estar",
    "author": "Katiane Margiotti Soares",
    "copyright": "© 2025 Katiane Margiotti Soares. Todos os direitos reservados.",
    "privacy": "unlisted",
    "android": {
      "package": "com.mindcare.app",
      "permissions": ["CAMERA", "RECORD_AUDIO"],
      "versionCode": 1,
      "compileSdkVersion": 34,
      "targetSdkVersion": 34,
      "buildToolsVersion": "34.0.0",
      "icon": "./assets/images/LogoMindCare.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/LogoMindCare.png",
        "backgroundColor": "#41ACBB"
      }
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo precisa acessar a câmera.",
        "NSMicrophoneUsageDescription": "Este aplicativo precisa acessar o microfone."
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ]
    ],
    "assetBundlePatterns": ["**/*"],
    "splash": {
      "image": "./assets/images/LogoMindCare.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": true
  }
}